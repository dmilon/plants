<div class="container">
  <div class="row justify-content-center">
    <div class="col-4">
      <%= simple_form_for([@plant, @plant_tag]) do |f| %>
        <%= f.input :tag, collection: Tag.all, input_html: { multiple: true, class: "multiple-select" }, include_hidden: false, include_blank: false %>
        <%= f.submit "Add a tag", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>

